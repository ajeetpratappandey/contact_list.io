<html>
  <head>
    <title><%= locals.title %></title>
    <a href="https://icons8.com/icon/KWlbfDx4oiIG/phone-book"></a>
    <link rel="stylesheet" href="/css/home.css">
  </head>

  <body>
    <h1 id="page-heading"> 
      <i class="imgphonebook" ><img src="https://img.icons8.com/ios-filled/50/000000/call-list.png"/></i>
      My Contact List</h1>
    
      <div class="contact-list-container">
        <ul>
            <% for(let i of contact_List){%>
            <li class="contacts">
              <div class="details">
                <p><%= i.name %></p>
                <p><%= i.phone%></p>
              </div>
               <div class="delete-button">
                 <a href="/delete-contact/?id=<%= i._id %> ">
                 <i><img src="https://img.icons8.com/ios-glyphs/20/000000/filled-trash.png"/></i>
                 </a>
               </div>
               
            </li>    
            <%} %>        
        </ul>
      </div>
  
  <form action="/create_contact" method="POST">
                <input type="text"name="name" placeholder="Enter name" required > 
               <input type="number"name="phone" placeholder="Enter phone" required>
                  <button type="submit">Add Contact</button>
 </form>
<script type="text/javascript" src="/js/home.js"></script>
  </body>

</html>
